packages:
  yum:
    nfs-utils: []
    rpcbind: []
services:
  sysvinit:
    rpcbind:
      enabled: true
      ensureRunning: true
    nfslock:
      enabled: true
      ensureRunning: true
files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/01-mount-drives.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      . /opt/elasticbeanstalk/support/envvars
      mount -t nfs nfs.lonestarpercussion.com:/shared/static $EB_CONFIG_APP_CURRENT/static
commands:
  0_make-directory:
    command: |
      if [ ! -f $EB_CONFIG_APP_CURRENT/static ]; then
        mkdir -p $EB_CONFIG_APP_CURRENT/static
      fi
  2_add-nfs-to-startup:
    command: echo 'nfs.lonestarpercussion.com:/shared/static $EB_CONFIG_APP_ONDECK/static nfs rsize=8192,wsize=8192,timeo=14,intr 0 0' >> /etc/fstab